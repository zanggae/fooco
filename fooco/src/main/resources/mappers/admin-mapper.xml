	UPDATE (SELECT * FROM IMAGE I LEFT JOIN RES_IMAGE R ON (I.IMAGE_ID = R.IMAGE_ID)) 
	SET IMAGE_ORIGIN_NAME = #{oName}
    , IMAGE_NEW_NAME = #{nName}
