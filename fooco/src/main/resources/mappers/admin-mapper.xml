<update id="updateRestaurant" parameterType="Restaurant">
	UPDATE RESTAURANT 
	SET RES_CATEGORY_ID =#{resCategoryId}, LOCATION_ID =#{locationId}, RES_NAME =#{resName},
		RES_ADDRESS =#{resAddress}, RES_CONTENT =#{resContent}, RES_TIME =#{resTime},
