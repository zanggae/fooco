<!-- mylist등록 검색결과 쿼리 -->
<select id="searchListRes" parameterType="string" resultMap="mylistResultSet">
	SELECT
	RES_ID,RES_NAME,RES_ID,RES_ADDRESS,IMAGE_ORIGIN_NAME,IMAGE_NEW_NAME,IMAGE_FILEPATH,ML_ID
	FROM SELECT_MYLIST
	WHERE RES_NAME LIKE '%'||#{searchRes}||'%' ORDER BY RES_NAME
</select>

<!-- mylist 검색결과 추가  쿼리 -->
<select id="selectmylist" parameterType="int" resultMap="mylistResultSet">
